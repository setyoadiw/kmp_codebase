<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:windowLightStatusBar" >true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">true</item>
    </style>

    <style name="PlatformAdjusted.Theme" parent="AppTheme">
        <item name="android:statusBarColor">#4D000000</item>
    </style>

    <style name="Theme.AppTheme" parent="PlatformAdjusted.Theme" />

    <style name="NightAdjusted.Theme.Splash" parent="Theme.SplashScreen">
        <item name="android:windowLightStatusBar" tools:targetApi="23">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">true</item>
    </style>

    <style name="SplashScreenTheme" parent="NightAdjusted.Theme.Splash">
        <item name="windowSplashScreenBackground">#FFFFFF</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher</item>

        <item name="android:windowAnimationStyle">@style/SplashScreenAnimation</item>
        <item name="postSplashScreenTheme">@style/Theme.AppTheme</item>
    </style>

    <style name="SplashScreenAnimation">
        <item name="android:windowEnterAnimation">@android:anim/slide_in_left</item>
        <item name="android:windowExitAnimation">@android:anim/slide_out_right</item>
    </style>
</resources>